<%# views/index.ejs %>

  <link rel="stylesheet" href="/stylesheets/style.css">
  <style>
  body{
      margin-left: 20px;
      background-color: #eee5cb;
  }
  </style>

  <div id='messageArea' class='row'>
      <div class='col-md-3' id="strategy">
          <div class='well' id="prompts">
              <h3> Prompts</h3>
              <ul class='list-group'>
                  <li class="list-item"> I would like to make a mortgage payment </li>
              </ul>
          </div>
      </div>
      <div class='col-md-8' id="chat">
          <div class='container' id='messageBox'></div>
          <div class="container" id="messageFormDiv">
              <form id='messageForm'>
                  <div class="form-group">
                      <label for="message" style="color:white;">Enter Message</label>
                      <br/>
                      <input type="text" id="message" class="form-control" placeholder="Ask away!" style="width:80%; float: left;" autocomplete="off">
                      <input type='submit' class='btn btn-primary' value='Send' id="send" style="width: 15%; float: left; background-color: #222; color: white; border-color:white;" />
                      <input type='file'  class='btn btn-primary' name="audio" accept="audio/*" value='Record' id="record" style="width: 15%; float: left; background-color: #222; color: white; border-color:white;" /> 
                  </div>
              </form>
          </div>
      </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>
  <script src="//www.WebRTC-Experiment.com/RecordRTC.js"></script>
  <script src="/javascripts/socket.js"></script>
  <script src='/socket.io/socket.io.js'> </script>
  <script src="/javascripts/aws-sdk.min.js"></script>
  <script src="/javascripts/aws-lex-audio.min.js"></script>